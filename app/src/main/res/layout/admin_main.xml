<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivityAdmin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="128dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_accessibility_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/po_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Abiha Aftab"
            android:layout_marginTop="1dp"
            app:layout_constraintEnd_toEndOf="@+id/profile"
            app:layout_constraintStart_toStartOf="@+id/profile"
            app:layout_constraintTop_toBottomOf="@+id/profile"/>

        <TextView
            android:id="@+id/po_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/po_name"
            app:layout_constraintHorizontal_bias="0.0"
            android:text="Admin"
            app:layout_constraintStart_toStartOf="@+id/po_name"
            app:layout_constraintTop_toBottomOf="@+id/po_name"/>

        <Button
            android:id="@+id/add_PO"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"

            android:text="Add New Placement Oficer"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/po_role"
            app:layout_constraintStart_toStartOf="@+id/po_role"
            app:layout_constraintTop_toBottomOf="@+id/po_role" />
        <Button
            android:id="@+id/search"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"

            android:text="Search for Placement Officer"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/add_PO"
            app:layout_constraintStart_toStartOf="@+id/add_PO"
            app:layout_constraintTop_toBottomOf="@+id/add_PO" />

        <Button
            android:id="@+id/search1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"

            android:text="Search for Company"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/search"
            app:layout_constraintStart_toStartOf="@+id/search"
            app:layout_constraintTop_toBottomOf="@+id/search" />

        <Button
            android:id="@+id/log_out"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:text="Log out"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/search1"
            app:layout_constraintStart_toStartOf="@+id/search1"
            app:layout_constraintTop_toBottomOf="@+id/search1" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>